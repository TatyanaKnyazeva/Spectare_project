<UserControl x:Class="Spectare.FavouriteItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Spectare"
             mc:Ignorable="d" 
             d:DesignHeight="62" d:DesignWidth="567">
    <UserControl.Resources>
        <local:FavouriteItemDesignModel x:Key="FavouriteItem"/>
    </UserControl.Resources>
    <Grid Background="#FFFFF9F9" d:DataContext="{x:Static local:FavouriteItemDesignModel.item}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="98*"/>
            <ColumnDefinition Width="390*"/>
            <ColumnDefinition Width="39*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="12*"/>
        </Grid.RowDefinitions>
        <Image Grid.Column="1" Grid.Row="0" Grid.RowSpan="2"/>
        <TextBlock Grid.Column="2" Text="{Binding Title}"/>
        <TextBlock Grid.Column="2" Grid.Row="1" Text="{Binding Genre}"/>
    </Grid>
</UserControl>
