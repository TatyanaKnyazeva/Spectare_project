<Window x:Class="Spectare.Film_s_Page"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spectare"
        mc:Ignorable="d"
        Title="Film_s_Page" Height="507.765" Width="724.659">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="images/bluebg.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="284*"/>
            <ColumnDefinition Width="433*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="295*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="86*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="1" Style="{StaticResource RegularButton}" Content="Add to Favourites" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Button Grid.Row="1" Style="{StaticResource RegularButton}" Content="Delete from Favourites" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
        <TextBlock Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"/>
        <Image Source="{Binding PosterLink}" Margin="10"/>
    </Grid>
</Window>
